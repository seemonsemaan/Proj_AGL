@model IEnumerable<Proj_AGL.Models.Grade>

@{
    ViewData["Title"] = "Print";
}

<style>
    table {
        border: 1px black solid;
        padding: 10px;
    }

    th {
        border: 1px black solid;
        padding: 16px;
    }

    td {
        width: 200px;
        border: 1px black solid;
        padding: 16px;
    }
</style>
@if (Model.Count() < 1)
{
    <h4>No Grades Found</h4>
}
else
{
<h5>@Model.First().User.UserName.Split('@')[0]</h5>
    <table>
        <thead>
            <tr><th>Course Name</th><th>Grade</th></tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>
                        <p>@grade.Course.Name</p>
                    </td>
                    <td>
                        <p>@grade.Score</p>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}